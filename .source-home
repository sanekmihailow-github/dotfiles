homeuser="$(find /home/ -name ".bash_history" 2>/dev/null |awk -F"/" '{print $3}' |head -n1)"
#or
#homeuser="$(who | cut -d' ' -f1 | grep 'you_user' |head -n1)"

if [ -d /home/$homeuser/.shell_source ]; then

     source /home/$homeuser/.shell_source/exports      && echo 'export loaded'
     source /home/$homeuser/.shell_source/defaults     && echo 'default loaded'
     source /home/$homeuser/.shell_source/alias        && echo 'alias loaded'
     source /home/$homeuser/.shell_source/functions    && echo 'function load'
    #source /home/$homeuser/.shell_source/git
        if [ "$USER" = "root" ]; then
                source /home/$homeuser/.shell_source/prompt_root && echo 'root loaded'
        else    source /home/$homeuser/.shell_source/prompt      && echo 'user loaded'
        fi
fi          

